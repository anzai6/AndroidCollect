    <style name="scrollview_main" parent="base_scrollview">
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="ll_main" parent="base_ll_mm_v">
        <item name="android:background">@color/bg_all</item>
