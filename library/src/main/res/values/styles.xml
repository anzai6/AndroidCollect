<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="btn_bg">@drawable/selector_btn_main_blue</item>
        <item name="title_bg">@color/colorPrimary</item>
        <item name="all_item_bg">@color/white</item>
        <item name="text_color_default">@color/text_black</item>
        <item name="text_color_hint">@color/text_hint</item>
        <item name="btn_text_color">@color/text_white</item>
        <item name="btn_text_color_disable">@color/text_gray</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 适用于开启滑动返回功能的 Activity -->
    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="base_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮上 -->
        <item name="android:windowIsTranslucent">true</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 标题 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 是否环绕半透明背景 -->
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="dialog_scroll_select" parent="base_dialog_style">
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 加载对话框 -->
    <style name="dialog_loading" parent="base_dialog_style">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ScrollSelectDialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_scroll_select_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_scroll_select_out</item>
    </style>

    <style name="dialog_ll" parent="base_ll_mw_v">
        <item name="android:background">@drawable/shape_dialog_common_bg</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>

