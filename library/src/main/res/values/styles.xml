        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="rl_main" parent="base_mm">
        <item name="android:background">@color/bg_all</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- 大蓝按钮 -->
    <style name="btn_main_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_40</item>
        <item name="android:layout_marginTop">@dimen/space_24</item>
        <item name="android:layout_marginLeft">@dimen/space_16</item>
        <item name="android:layout_marginRight">@dimen/space_16</item>
        <item name="android:background">?btn_bg</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv16</item>
        <item name="android:elevation">@dimen/space_2</item>
    </style>

    <style name="fl_head" parent="base_wm">
        <item name="android:layout_centerVertical">true</item>
